  </div>

  <div class="field">
    <%= form.label :datepublished %>
    <%= form.date_select :datepublished, id: :item_reviewed_datepublished %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
